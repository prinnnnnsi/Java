import java.util.Scanner;

public class DegreeConversion {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        double celciusToFahrenheit;
        double fahrenheitToCelsius;


        System.out.print("Enter the temperature in Celsius: ");
        double celcius = input.nextDouble();
        celciusToFahrenheit = (celcius * 9/5) + 32;
        System.out.println("The equivalent temperature in Fahrenheit is: " + celciusToFahrenheit);


        System.out.print("Enter the temperature in Fahrenheit: ");
        double fahrenheit = input.nextDouble();
        fahrenheitToCelsius = (fahrenheit - 32) * 5/9;
        System.out.println("The equivalent temperature in Celsius is: " + fahrenheitToCelsius);

        input.close();
    }
}   
